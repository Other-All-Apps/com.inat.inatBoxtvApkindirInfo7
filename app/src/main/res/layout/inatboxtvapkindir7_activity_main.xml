<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="3"
    android:background="@drawable/inatboxtvapkindir7_bg"
    tools:context="com.inatboxtvapkindirinfo.inat.inatboxtvapkindir7_MainActivity">

    <FrameLayout
        android:id="@+id/fl_adplaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inatboxtvapkindir7_bannerrr"
        android:orientation="vertical"
        android:visibility="visible">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/video_player"

                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:textSize="17dp"
                android:background="@drawable/inatboxtvapkindir7_group"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Video Player"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/inatboxtvapkindir7_group"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:id="@+id/live_stream"
                android:text="Live Streaming"
                android:layout_marginLeft="10dp"
                android:textSize="17dp"
                android:layout_marginRight="10dp"/>




        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/inatboxtvapkindir7_qb2"
        android:gravity="bottom"
        android:visibility="visible">
    </FrameLayout>

</LinearLayout>